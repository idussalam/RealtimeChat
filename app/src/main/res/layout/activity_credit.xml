<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_credit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.idussalam.realtimechat.credit">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logologo"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo2"
        />
    <TextView
        android:id="@+id/judul"
        android:layout_below="@id/logo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANDROBEDA REALTIME CHAT"
        android:textSize="30dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/dibuat"
        android:layout_below="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dibuat oleh : "
        android:textAlignment="center"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/nama1"
        android:layout_below="@id/dibuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AAT (1306001)"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/nama2"
        android:layout_below="@id/nama1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IRVAN SYAIDUSSALAM (1306070)"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/nama3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MOCH. RAMDAN N F (1306084) "
        android:textAlignment="center"
        android:layout_below="@+id/nama2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
